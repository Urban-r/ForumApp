<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Horror Forum - Topics</title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
</head>
<body>
    <h1>Horror Forum Topics</h1>
    
    <!-- Navigation Links -->
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
        </ul>
    </nav>

    <main>
        <!-- Topics List -->
        <% if (topics && topics.length > 0) { %>
            <ul>
                <% topics.forEach(function(topic) { %>
                    <li><a href="/topics/<%= topic.id %>"><%= topic.name %></a></li> <!-- Each topic is a hyperlink -->
                <% }); %>
            </ul>
        <% } else { %>
            <p>No topics found.</p>
        <% } %>
    </main>
</body>
</html>
